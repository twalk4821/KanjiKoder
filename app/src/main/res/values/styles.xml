<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="KanjiTooltip" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_strokeColor" format="color" >@color/japan_red</item>
        <item name="ttlm_backgroundColor" format="color">@color/japan_red</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/japan_red</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/dark_gray</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/light_gray</item>
    </style>
</resources>
